general {
  colors = true
  interval = 5
}

order += "disk /"
order += "disk /mnt/media"
order += "read_file uptime"
order += "ethernet eno1"
order += "memory"
order += "load"
order += "volume main"
order += "tztime local"

ethernet eno1 {
  format_up = "ğŸ–§ %ip (%speed)"
  format_down = "ğŸ–§ down"
}

tztime local {
  format = "%a, %B %d at %H:%M"
}

load {
  format = "1-min load: %1min"
}

memory {
  format = "ğŸ %free Free (%percentage_used Used)"
  threshold_degraded = "20%"
  format_degraded = "MEMORY: %free"
}

disk "/" {
  format = "/ ğŸ— %percentage_used (%used) used of %total"
  low_threshold = 15
  threshold_type = percentage_free
  format_below_threshold = "LOW SPACE: (/) %percentage_free free (%free) of %total"
}

disk "/mnt/media" {
  format = "/mnt/media ğŸ— %percentage_used (%used) used of %total"
  low_threshold = 15
  threshold_type = percentage_free
  format_below_threshold = "LOW SPACE: (/mnt/media) %percentage_free free (%free) of %total"
}

read_file uptime {
  path = "/proc/uptime"
  format = "uptime & sum cpu idletime = %content"
}

volume main {
  format = "ğŸ”Š %volume"
  format_muted = "ğŸ”‡ (%volume)"
  device = "pulse:alsa_output.pci-0000_01_00.1.hdmi-stereo"
}
